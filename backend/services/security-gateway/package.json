{
  "name": "@uaip/security-gateway",
  "version": "1.0.0",
  "type": "module",
  "description": "UAIP Security Gateway Service - Authentication, Authorization, and Approval Workflows",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec tsx src/index.ts",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:integration": "jest src/__tests__/integration --runInBand --forceExit --detectOpenHandles",
    "test:integration:oauth": "jest src/__tests__/integration/oauth-flow.integration.test.ts --runInBand --forceExit",
    "test:integration:security": "jest src/__tests__/integration/security-validation.integration.test.ts --runInBand --forceExit",
    "test:integration:coverage": "jest src/__tests__/integration --coverage --runInBand --forceExit --detectOpenHandles"
  },
  "dependencies": {
    "@uaip/config": "workspace:*",
    "@uaip/middleware": "workspace:*",
    "@uaip/shared-services": "workspace:*",
    "@uaip/llm-service": "workspace:*",
    "@uaip/types": "workspace:*",
    "@uaip/utils": "workspace:*",
    "amqplib": "catalog:backend",
    "axios": "^1.7.7",
    "base64url": "^3.0.1",
    "bcrypt": "catalog:backend",
    "bcryptjs": "^3.0.2",
    "compression": "catalog:backend",
    "cors": "catalog:backend",
    "express": "catalog:backend",
    "express-rate-limit": "catalog:backend",
    "express-slow-down": "catalog:backend",
    "express-validator": "^7.2.0",
    "helmet": "catalog:backend",
    "jsonwebtoken": "catalog:backend",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.1.0",
    "nodemailer": "^7.0.3",
    "pg": "catalog:backend",
    "prom-client": "catalog:backend",
    "qrcode": "^1.5.3",
    "redis": "^5.5.6",
    "speakeasy": "^2.0.0",
    "typeorm": "^0.3.25",
    "winston": "catalog:backend",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@types/amqplib": "catalog:backend",
    "@types/bcrypt": "catalog:backend",
    "@types/compression": "catalog:backend",
    "@types/cors": "catalog:backend",
    "@types/express": "catalog:backend",
    "@types/express-validator": "^3.0.0",
    "@types/jest": "catalog:backend",
    "@types/jsonwebtoken": "catalog:backend",
    "@types/node": "catalog:backend",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "catalog:backend",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "@typescript-eslint/parser": "catalog:",
    "concurrently": "catalog:dev",
    "eslint": "catalog:",
    "jest": "catalog:backend",
    "nodemon": "catalog:backend",
    "supertest": "^7.1.1",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "catalog:backend",
    "tsx": "catalog:backend",
    "typescript": "catalog:"
  },
  "keywords": [
