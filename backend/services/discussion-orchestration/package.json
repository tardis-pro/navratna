{
  "name": "@uaip/discussion-orchestration",
  "version": "1.0.0",
  "description": "UAIP Discussion Orchestration Service - Manages discussion lifecycle, turn strategies, and real-time coordination",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --build && tsc-alias",
    "dev": "concurrently \"npm run build:watch\" \"npm run start:watch\"",
    "build:watch": "tsc --watch",
    "start:watch": "nodemon --watch dist --delay 1000ms dist/index.js",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@types/ws": "catalog:backend",
    "@uaip/config": "workspace:*",
    "@uaip/middleware": "workspace:*",
    "@uaip/shared-services": "workspace:*",
    "@uaip/types": "workspace:*",
    "@uaip/utils": "workspace:*",
    "compression": "catalog:backend",
    "cors": "catalog:backend",
    "dotenv": "catalog:backend",
    "express": "catalog:backend",
    "express-rate-limit": "catalog:backend",
    "helmet": "catalog:backend",
    "socket.io": "catalog:backend",
    "winston": "catalog:backend",
    "ws": "catalog:backend",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/compression": "catalog:backend",
    "@types/cors": "catalog:backend",
    "@types/express": "catalog:backend",
    "@jest/globals": "^29.7.0",
    "@types/jest": "catalog:backend",
    "supertest": "^7.0.0",
    "@types/node": "catalog:backend",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "@typescript-eslint/parser": "catalog:",
    "concurrently": "catalog:dev",
    "eslint": "catalog:",
    "jest": "catalog:backend",
    "ts-jest": "catalog:backend",
    "tsc-alias": "catalog:backend",
    "tsx": "catalog:backend",
    "typescript": "catalog:"
  },
  "keywords": [
    "uaip",
    "discussion",
    "orchestration",
    "real-time",
    "websocket",
    "turn-management"
  ],
  "author": "UAIP Team",
  "license": "MIT"
}
